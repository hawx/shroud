require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('shroud') do |p|
  p.description = "A wrapper for the CloudApp REST API"
  p.url = "http://github/hawx/shroud"
  p.author = "Joshua Hawxwell"
  p.email = "m@hawx.me"
  p.runtime_dependencies = ['patron', 'crack']
  p.development_dependencies = []
  p.executable_pattern = ['bin/shroud']
end